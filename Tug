  <input type="text" id="username" placeholder="Ton pseudo Roblox">
  <button onclick="start()">Commencer</button>

  <p id="result"></p>

  <script>
    function start() {
      let user = document.getElementById("username").value;
      if(user.trim() === "") {
        document.getElementById("result").innerText = "❌ Merci d’entrer un pseudo.";
      } else {
        document.getElementById("result").innerText = "✅ Bienvenue " + user + "! (test réussi)";
      }
    }
  </script>
